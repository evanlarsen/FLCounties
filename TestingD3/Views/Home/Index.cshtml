<style>
    body { padding: 0;margin: 0; }
    .background {
        fill: none;
        pointer-events: all;
    }
    #counties {
        fill: #aaa;
        stroke: #fff;
        stroke-width: 1.5px;
    }
    #counties .active {
        fill: steelblue;
    }
</style>

<script>
    $(function() {
        var width = 960,
            height = 960,
            centered;

        // topic about how to set the projection
        // https://groups.google.com/forum/?fromgroups=#!topic/d3-js/lR7GGswygI8
        var projection = d3.geo.albers()
            .translate([0,0])
            .scale(8000)
            .rotate([83.7, 0]) // [-logitude, 0] adjusting the logitude positive moves map right
            .center([0, 27.8]); // [0, latitude] adjusting the latitude positive moves map down

        var path = d3.geo.path().projection(projection);

        var svg = d3.select("body").append('svg')
            .attr('width', width)
            .attr('height', height);

        svg.append('rect')
            .attr('class', 'background')
            .attr('width', width)
            .attr('height', height)
            .on('click', click);

        var g = svg.append('g')
            .attr('transform', 'translate(' + width / 2 + ',' + height / 2 + ')')
          .append('g')
            .attr('id', 'counties');

        d3.json('Content/FLCounties.topo.js', function (error, fl) {
            var geoJson = topojson.object(fl, fl.objects['FLCounties.geo']);

            g.selectAll('path')
                .data(geoJson.geometries)
              .enter().append('path')
                .attr('d', path)
                .on('click', click);
        });
        
        function click(d) {
            var x = 0,
                y = 0,
                k = 1;
            
            if (d && centered !== d) {
                var centroid = path.centroid(d);
                x = -centroid[0];
                y = -centroid[1];
                k = 4;
                centered = d;
                toastr.success(d.properties.name + ' County');
            } else {
                centered = null;
            }
            g.selectAll('path')
                .classed('active', centered && function (d) { return d === centered; });

            g.transition()
                .duration(1000)
                .attr('transform', 'scale(' + k + ')translate(' + x + ',' + y + ')')
                .style('stroke-width', 1.5 / k + 'px');

        }
    });
</script>
